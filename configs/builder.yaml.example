# Portage Builder Configuration Example

# Server configuration
port: 9090
workers: 2

# Build configuration
use_docker: true
docker_image: "gentoo/stage3:latest"

# Working directories
work_dir: "/var/tmp/portage-builds"
artifact_dir: "/var/tmp/portage-artifacts"

# GPG signing (optional)
gpg_enabled: false
gpg_key_id: ""
gpg_key_path: ""

# Storage configuration for artifacts
storage:
  type: "local"  # Options: local, s3, http
  local_dir: "/var/binpkgs"

  # S3 configuration (when type: s3)
  # s3_bucket: "my-binpkgs"
  # s3_region: "us-east-1"
  # s3_prefix: "gentoo/"

  # HTTP configuration (when type: http)
  # http_base: "https://binpkgs.example.com"
